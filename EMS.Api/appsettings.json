{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AuthSettings": {
    "Audience": "https://localhost:5001",
    "Issuer": "https://localhost:5001",
    "TokenExpirationMinutes": 30,
    "PasswordExpirationDays": 90,
    "Lockout_MaxFailedAccessAttempts": 3,
    "Lockout_DurationInMinutes": 5,
    "LastPasswordsToCheckOnPasswordChange": 5
  },
  "WebAppUrl": "http://localhost:4200",
  "EmailConfig": {
    "SMTPHost": "smtp-relay.sendinblue.com",
    "Port": 587,
    "SenderName":  "Swansea Event Management",
    "SenderAddress": "no-reply@swanseaeventmanagement.com"
  }
 }
